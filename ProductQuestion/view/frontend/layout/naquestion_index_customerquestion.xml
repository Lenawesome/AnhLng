<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account" />

    <body>
        <referenceBlock name="page.main.title">
        <action method="setPageTitle">
        <argument translate="true" name="title" xsi:type="string">My Question</argument>
        </action>
    </referenceBlock>
        <referenceContainer name="content">
            <container name="sales.order.history.extra.column.header" as="extra.column.header" label="Order History Extra Column Header"/>
            <block class="AnhLng\ProductQuestion\Block\Catalog\Product\View\ProductQuestion" template="AnhLng_ProductQuestion::customerquestion.phtml" />
        </referenceContainer>
    </body>
</page>
